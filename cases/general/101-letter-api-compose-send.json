    {
      "id": "cap-http-request",
      "type": "requires_capability",
      "value": "http_request",
      "required": true,
      "weight": 0.5
    },
    {
      "id": "prompt-letter-endpoint",
      "type": "requires_prompt_contains",
      "value": "/letters/draft",
      "required": true,
      "weight": 0.25
    },
    {
      "id": "prompt-auth",
      "type": "requires_prompt_contains",
      "value": "Bearer",
      "required": true,
      "weight": 0.25
    }
  ]
}
